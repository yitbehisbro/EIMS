@model EdrIMS.Models.EdrEvent

@{
    ViewData["Title"] = "Edit - EdrEvent";
}

<div class="card border-start border-start-width-2 border-start-secondary border-end border-end-width-1 border-end-secondary rounded-0">
    <div class="card-header d-flex align-items-center bg-light py-0">
        <h6 class="py-3 mb-0">@ViewData["Title"]</h6>
        <div class="ms-auto my-auto">
        </div>
    </div>
    <form asp-action="Edit">
        <div class="card-body">
<div class="row">
    <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 form-group">
                <label asp-for="EventTypeId" class="form-label"></label>
                <select asp-for="EventTypeId" class="form-control select" asp-items="ViewBag.EventTypeId"><option value="">---Select---</option></select>
                <span asp-validation-for="EventTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="Location" class="form-label"></label>
                <input asp-for="Location" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="EventWeightId" class="form-label"></label>
                <select asp-for="EventWeightId" class="form-control select" asp-items="ViewBag.EventWeightId"><option value="">---Select---</option></select>
                <span asp-validation-for="EventWeightId" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="EventAttendanceModeId" class="form-label"></label>
                <select asp-for="EventAttendanceModeId" class="form-control select" asp-items="ViewBag.EventAttendanceModeId"><option value="">---Select---</option></select>
                <span asp-validation-for="EventAttendanceModeId" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="DateOfEvent" class="form-label"></label>
                <input asp-for="DateOfEvent" class="form-control" autocomplete="off"/>
                <span asp-validation-for="DateOfEvent" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
          </div>
            </div>
        </div>
        <div class="card-footer pt-2 pb-2">
            <div class="hstack gap-2 mt-3 mt-sm-0">
                <button type="submit" value="Save" class="btn btn-success w-100 w-sm-auto">
                    <i class="ph-floppy-disk me-2"></i>
                    Save
                </button>
                <a asp-action="Index" class="btn btn-light w-100 w-sm-auto">
                    <i class="ph-arrow-u-down-left me-2"></i>
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/vendor/forms/selects/select2.min.js"></script>
    <script src="~/js/form_select2.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
